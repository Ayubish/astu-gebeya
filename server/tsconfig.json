{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@src/*": ["src/*"],
        "@prisma/client": ["./node_modules/@prisma/client/index"]
      }
    },
    "include": ["src/**/*.ts", "prisma/**/*.ts"],
    "exclude": ["node_modules"]
  }
  